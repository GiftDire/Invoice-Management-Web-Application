@page
@model InvoiceApp.Pages.Invoices.IndexModel
@{
}
<h2 class="text-center mb-3"> Invoices</h2>
<a  class="btn btn-primary" asp-page="/Invoices/create"> New Invoice</a>

<table class="table">
    <thread>
    <tr>
        <th>ID</th>
        <th>Invoice</th>
        <th>Status</th>
        <th>Client</th>
        <th>Total Price</th>
        <th>Issue Date</th>
        <th>Due Date</th>
        <th>Action</th>
    </tr>
    </thread>
    <tbody class="table-group-divider">

        @foreach(var invoice in Model.invoicelist){
            <tr>
                <td>@invoice.Id</td>
                <td>@invoice.Number</td>
                <td>@invoice.Status</td>
                <td>@invoice.Clientname</td>
                <td>@(invoice.Quantity * invoice.UnirPrice )R</td>
                <td>@invoice.IssueDate</td>
                <td>@invoice.Duedate</td>
                
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp_page="/Invoices/Edit" asp-route-id="@invoice.Id">Edit</a>
                    <a class="btn btn-primary btn-sm" asp_page="/Invoices/Edit" asp-route-id="@invoice.Id">Delete</a>
                </td>





            </tr>


        }

    </tbody>
</table>